<title>系统日志</title>
</head>


<body >
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页
	<span class="c-gray en">&gt;</span>
	系统管理
	<span class="c-gray en">&gt;</span>
	系统日志
	<a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a>
</nav>
<div class="page-container">
	<div class="text-c"> 日期范围：
		<input type="text" onfocus="WdatePicker({ maxDate:'#F{$dp.$D(\'logmax\')||\'%y-%M-%d\'}' })" id="logmin" class="input-text Wdate" style="width:120px;">
		-
		<input type="text" onfocus="WdatePicker({ minDate:'#F{$dp.$D(\'logmin\')}',maxDate:'%y-%M-%d' })" id="logmax" class="input-text Wdate" style="width:120px;">
		<input type="text" name="" id="searchname" placeholder="用户名" style="width:250px" class="input-text">
		<button name="" id="search" class="btn btn-success" onclick="go();"><i class="Hui-iconfont">&#xe665;</i> 搜日志</button>
	</div>
	<div class="page-container">
		</div>
		<div class="mt-20">
	<table  class="table table-border table-bordered table-bg">
		<thead>
			<tr class="text-c">
				<th width="80">ID</th>
				
				<th width="11%">用户名</th>
				<th>内容</th>
				<th width="11%">操作类型</th>
				<th width="250">时间</th>
				
			</tr>
		</thead>
		<c:forEach items="${logBeans}" var="list">
		<tbody>
			<tr class="text-c">
				<td>${list.t_operationlog_id }</td>
				
				<td>${list.t_operationlog_username }</td>
				<td>${list.t_operationlog_content }</td>
				<td>${list.t_operationlog_name }</td>
				<td>${list.t_operationlog_time }</td>
				
			</tr>
		</tbody>
		</c:forEach>
	</table>
	<div class="page-container">
		</div>
	</div>
	    <div style="text-align: right">  
        <font size="2">共 ${page.totalPageCount} 页</font> <font size="2">第  
            ${page.pageNow} 页</font> <a href="operate_log.do?pageNow=1">首页</a>  
        <c:choose>  
            <c:when test="${page.pageNow - 1 > 0}">  
                <a href="operate_log.do?pageNow=${page.pageNow - 1}">上一页</a>  
            </c:when>  
            <c:when test="${page.pageNow - 1 <= 0}">  
                <a href="operate_log.do?pageNow=1">上一页</a>  
            </c:when>  
        </c:choose>  
        <c:choose>  
            <c:when test="${page.totalPageCount==0}">  
                <a href="operate_log.do?pageNow=${page.pageNow}">下一页</a>  
            </c:when>  
            <c:when test="${page.pageNow + 1 < page.totalPageCount}">  
                <a href="operate_log.do?pageNow=${page.pageNow + 1}">下一页</a>  
            </c:when>  
            <c:when test="${page.pageNow + 1 >= page.totalPageCount}">  
                <a href="operate_log.do?pageNow=${page.totalPageCount}">下一页</a>  
            </c:when>  
        </c:choose>  
        <c:choose>  
            <c:when test="${page.totalPageCount==0}">  
                <a href="operate_log.do?pageNow=${page.pageNow}">尾页</a>  
            </c:when>  
            <c:otherwise>  
                <a href="operate_log.do?pageNow=${page.totalPageCount}">尾页</a>  
            </c:otherwise>  
        </c:choose>  
    </div>  
</div>
